{
	"compilerOptions": {
		"baseUrl": "src",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es2020",
		"module": "commonjs",
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["next-env.d.ts", "src", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
